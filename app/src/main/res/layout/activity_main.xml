<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_task_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_task_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_task_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_add_long_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Long task" />

    <Button
        android:id="@+id/btn_add_short_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add short task" />

    <Button
        android:id="@+id/btn_stop_last_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop last operation" />

</LinearLayout>
